<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Shape.SmartPlant.Button" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Widget.SmartPlant.Button" parent="Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/Shape.SmartPlant.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.SmartPlant.Button</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Widget.SmartPlant.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/Shape.SmartPlant.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.SmartPlant.Button</item>
        <item name="strokeWidth">@dimen/smartplantButtonStrokeWidth</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Widget.SmartPlant.Button.Primary" parent="Widget.SmartPlant.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.SmartPlant.Button.Outline.Primary" parent="Widget.SmartPlant.Button.Outline">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.SmartPlant.Button.Secondary" parent="Widget.SmartPlant.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.SmartPlant.Button.Outline.Secondary" parent="Widget.SmartPlant.Button.Outline">
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>
